<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recipes_item_selector"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/tv_padding"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingTop="@dimen/tv_padding"
            android:textSize="@dimen/text_medium_size"
            tools:text="Chocolate Cake" />
    </android.support.v7.widget.CardView>
</RelativeLayout>